@model Webform.Models.HomeModel
@{
    ViewBag.Title = "Home Page";
}


<div class="container">
 
    <section class="padding-bottom-sm">

        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Anh em mua di</h4>
        </header>

        <div class="row row-sm">
    
            @foreach (var item in Model.ListProduct.Take(3))
            {
                <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                    <div href="#" class="card card-sm card-product-grid">
                        <a href="@Url.Action("Detail","Product",new {ID = item.ID })" class="img-wrap"> <img src="~/Content/images/items/@item.image"> </a>
                        <figcaption class="info-wrap">
                            @Html.ActionLink(item.name_product, "Detail", "Product", new { ID = item.ID }, null)
                            <div class="price mt-1">@item.price</div> <!-- price-wrap.// -->
                        </figcaption>
                    </div>
                </div>
            }
            <!-- col.// -->

        </div> <!-- row.// -->
    </section>

  

    
</div>
